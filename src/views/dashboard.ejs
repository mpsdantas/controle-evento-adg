    <title>Dashboard - Gerenciamento Arduino Day</title>
    <link rel="icon" href="img/gim-logo.png">

    <!-- Bootstrap core CSS -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

